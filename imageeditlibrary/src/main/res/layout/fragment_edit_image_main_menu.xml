<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_paint"
            style="@style/option_style"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/icon_style"
                android:layout_gravity="center"
                android:src="@drawable/paint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/edit"
                android:textColor="@color/text_color"
                android:textSize="@dimen/image_edit_text_size"
                tool:text="Text"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_filter"
            style="@style/option_style"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/icon_style"
                android:layout_gravity="center"
                android:src="@drawable/filter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/filter"
                android:textColor="@color/text_color"
                android:textSize="@dimen/image_edit_text_size"
                tool:text="Text"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_crop"
            style="@style/option_style"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/icon_style"
                android:layout_gravity="center"
                android:src="@drawable/crop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/crop"
                android:textColor="@color/text_color"
                android:textSize="@dimen/image_edit_text_size"
                tool:text="Text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_rotate"
            style="@style/option_style"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/icon_style"
                android:layout_gravity="center"
                android:src="@drawable/rotate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/rotate"
                android:textColor="@color/text_color"
                android:textSize="@dimen/image_edit_text_size"
                tool:text="Text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_text"
            style="@style/option_style"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/icon_style"
                android:layout_gravity="center"
                android:src="@drawable/text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/text"
                android:textColor="@color/text_color"
                android:textSize="@dimen/image_edit_text_size"
                tool:text="Text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_stickers"
            style="@style/option_style"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/icon_style"
                android:layout_gravity="center"
                android:src="@drawable/ic_stickers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/stickers"
                android:textColor="@color/text_color"
                android:textSize="@dimen/image_edit_text_size"
                tool:text="Text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_brightness"
            style="@style/option_style"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/icon_style"
                android:layout_gravity="center"
                android:src="@drawable/brightness"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/brightness"
                android:textColor="@color/text_color"
                android:textSize="@dimen/image_edit_text_size"
                tool:text="Text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_contrast"
            style="@style/option_style"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/icon_style"
                android:layout_gravity="center"
                android:src="@drawable/dropper"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/saturation"
                android:textColor="@color/text_color"
                android:textSize="@dimen/image_edit_text_size"
                tool:text="Text"/>

        </LinearLayout>



        <TextView
            android:id="@+id/btn_beauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/beauty"
            android:textColor="@color/white"
            android:textSize="@dimen/image_edit_text_size"
            android:visibility="gone"/>

    </LinearLayout>
</HorizontalScrollView>

